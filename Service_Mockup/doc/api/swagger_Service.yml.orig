---
swagger: "2.0"
info:
  version: "1.3"
  title: "Service SLR API"
  description: "See https://github.com/HIIT/mydata-stack/blob/master/mydata-linking.pdf for detailed JSON structures"
host: "example.service.example"
basePath: "/api/1.3/slr"

securityDefinitions:
  BasicAuth:
    type: basic
    description: HTTP Basic Auth

paths:
  /link:
    post:
      tags:
      - "Service - Internal"
      description: "This is called to let Service know/store the generated surrogate_id."
      summary: "Informs Service of generated surrogate_id"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Contains surrogate_id and user_id"
        required: true
        schema:
          $ref: "#/definitions/LinkParams"
      responses:
        200:
          description: "Returns 200 OK or Error Message"
        500:
          description: "Internal server error. The actual status code and content of the error message may vary depending on error occurred."
          schema:
            $ref: "#/definitions/errors"
  /login:
    get:
      tags:
      - "Service - External"
      description: "Generate User Form to authenticate for Service to continue SLR creation"
      summary: "Fetch login page"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
        -
          name: code
          in: query
          description: unique session code from Operator
          required: true
          type: string

        -
          name: return_url
          in: query
          description: base64 encoded URL where user is redirected once SLR is created
          required: true
          type: string

        -
          name: operator_id
          in: query
          description: Operator's id
          required: true
          type: string

        -
          name: linkingFrom
          in: query
          description: Are we initiating linking from Service or Operator
          required: true
          type: string
      responses:
        200:
          description: "Returns 200 OK or Error message"
        500:
          description: "Internal server error. The actual status code and content of the error message may vary depending on error occurred."
          schema:
            $ref: "#/definitions/errors"
    post:
      tags:
      - "Service - External"
      description: "User login ends up here with filled fields."
      summary: "Login user for consenting SLR"
      security:
        - BasicAuth: []
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        required: true
        schema:
          $ref: '#/definitions/LoginParams'

      responses:
        200:
          description: "Returns 200 OK or Error message"
        500:
          description: "Internal server error. The actual status code and content of the error message may vary depending on error occurred."
          schema:
            $ref: "#/definitions/errors"
  /store_slr:
    post:
      tags:
      - "Service - Internal"
      description: "Copy of finished SLR received from Service Management for storing"
      summary: "Store generated SLR"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Contains SLR and SLSR"
        required: true
        schema:
          $ref: "#/definitions/StoreSLRParams"
      responses:
        201:
          description: "Returns SLR id of stored SLR"
          schema:
            $ref: '#/definitions/StoreSLRResponse'
        500:
          description: "Internal server error. The actual status code and content of the error message may vary depending on error occurred."
          schema:
            $ref: "#/definitions/errors"

  /store_ssr:
    post:
      tags:
      - "Service - Internal"
      description: "Store Service Link Status Record"
      summary: "Store generated SSR"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Contains SSR"
        required: true
        schema:
          $ref: "#/definitions/StoreSLRParams"
      responses:
        201:
          description: "Returns ssr_id of stored SSR"
          schema:
            $ref: "#/definitions/StoreSSR"
        500:
          description: "Internal server error. The actual status code and content of the error message may vary depending on error occurred."
          schema:
            $ref: "#/definitions/errors"



definitions:
  errors:
      type: object
      properties:
        status:
          type: string
          description: HTTP status code as string value.
        code:
          type: integer
          description: HTTP status code
        title:
          type: string
          description: Title of error message.
        detail:
          type: string
          description: Detailed error message.
        source:
          type: string
          description: Source URI

  LoginParams:
    type: "object"
    properties:
      code:
        type: "string"
        description: "string containing code"
      Email:
        type: "string"
        description: "string containing user_id"
      Password:
        type: "string"
        description: "User password"
      linkingFrom:
        type: string
        description: "Are we linking from Operator or Service"
      return_url:
        type: string
        description: "Base64 encoded URL where we redirect after SLR has been created."
      operator_id:
        type: string
        description: "Operator's unique ID"


  LinkParams:
    type: "object"
    properties:
      surrogate_id:
        type: "string"
        description: "string containing surrogate_id"
      user_id:
        type: "string"
        description: "string containing user_id"

  StoreSSR:
    type: object
    properties:
      data:
        type: object
        properties:
          attributes:
            type: object
          type:
            type: string
            description: string containing type
          id:
            type: string

  StoreSLRResponse:
    type: object
    properties:
      data:
        type: object
        properties:
          id:
            type: string
          type:
            type: string

  StoreSLRParams:
    type: object
    properties:
      code:
        type: string
        description: string containing code
      data:
        type: object
        properties:
          ssr:
            type: object
            properties:
              attributes:
                type: object
              type:
                type: string
                description: string containing type
          slr:
            type: object
            properties:
              attributes:
                type: object
              type:
                type: string
                description: string containing type